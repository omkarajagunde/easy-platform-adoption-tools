{
    "manifest_version": 3,
    "name": "EasyWalk - Make beautiful app feature walkthroughs",
    "description": "Chrome extension that is used for creating immersive and quick product tours",
    "version": "1.0.0",
    "action": {
        "default_icon": "favicon.ico",
        "default_title": "EasyWalk"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery.js", "leader-line.min.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": ["scripting"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [
        {
        "resources": [ "index.html", "leader-line.min.js", "jquery.js", "plain-draggable.min.js", "static/*", "bee.svg" ],
        "matches": [ "<all_urls>" ]
        }
    ],
    "content_security_policy": { 
        "extension_pages": "script-src 'self'; default-src 'self';"
    }

}
